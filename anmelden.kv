<FlatButton@ButtonBehavior+Label>:
    font_size: 16

<AnmeldenWindow>:
    id: main_win
    orientation: "vertical"
    spacing: 10
    space_x: self.size[0]/3
    canvas.before:
        Color:
            rgba: (.2, .2, .2, 1)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        size_hint_y: None
        height: 50
        canvas.before:
            Color:
                rgba: (.4, .2, .9, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: "Melde dich an."
            bold: True
            size_hint_x: 1

    BoxLayout:
        orientation: 'vertical'
        padding: main_win.space_x, 15
        spacing: 20
        BoxLayout:
            orientation: "vertical"
            spacing: 5
            size_hint_y: None
            height: 100
            Label:
                id: info
                text: ''
                markup: True
                size_hint_y: None
                height: 20
            TextInput:
                id: username_field
                hint_text: "Benutzername"
                multiline: False
                focus: True
                on_text_validate: pwd_field.focus = True
            TextInput:
                id: pwd_field
                hint_text: "Passwort"
                multiline: False
                password: True
                on_text_validate: root.validate_user()
        Label:
            id: sp
            size_hint_y: None
            height: 40
        Button:
            text: "Anmelden"
            size_hint_y: None
            height: 70
            background_color: (.4, .2, .9, 1)
            background_normal: ''
            on_release: root.validate_user()
        Label:
            id: sp2